@page "/authentication/{action}"

@using Microsoft.AspNetCore.Components.WebAssembly.Authentication

<div class="container">
    <RemoteAuthenticatorView Action="@Action">
        <CompletingLoggingIn>
            <p>Connexion en cours...</p>
        </CompletingLoggingIn>
        <LogInFailed>
            <p>La connexion a échoué</p>
        </LogInFailed>
        <CompletingLogOut>
            <p>Déconnexion en cours...</p>
        </CompletingLogOut>
        <LogOutSucceeded>
            <p>Vous êtes déconnecté-e</p>
        </LogOutSucceeded>
        <LogOutFailed>
            <p>La déconnexion a échoué</p>
        </LogOutFailed>
    </RemoteAuthenticatorView>
    <a href="/">Revenir à l'accueil</a>
</div>
@code{
    [Parameter]//parameter sert à récupérer les paramètres de l'url
    public string Action { get; set; } //get et set permettent de récupérer et de modifier la valeur de la variable
}